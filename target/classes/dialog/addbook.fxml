<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.thuvien.controller.AddBookDialogController">
    <children>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Tên Tài Liệu:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Tác Giả:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="authorField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Mô Tả:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="descriptionField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Số Lượng:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="quantityField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Button text="Thêm" onAction="#handleAdd" GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>
        </GridPane>
    </children>
</VBox>
