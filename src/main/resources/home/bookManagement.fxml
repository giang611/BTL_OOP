<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.thuvien.controller.BookManagerController" prefWidth="1150.0" prefHeight="800.0" style="-fx-background-color: #E0F2F1;">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Quản lý kho sách" style="-fx-font-size: 28px; -fx-font-weight: bold;" />

        <HBox layoutX="20.0" layoutY="70.0" spacing="15.0">
            <children>
                <Label text="Tìm kiếm tên sách:" style="-fx-font-size: 16px;" />
                <TextField fx:id="titleSearchField" promptText="Nhập tên sách..." style="-fx-font-size: 14px; -fx-padding: 10px;" />

                <Label text="Tìm kiếm tác giả:" style="-fx-font-size: 16px;" />
                <TextField fx:id="authorSearchField" promptText="Nhập tên tác giả..." style="-fx-font-size: 14px; -fx-padding: 10px;" />

                <Label text="Tìm kiếm thể loại:" style="-fx-font-size: 16px;" />
                <TextField fx:id="genreSearchField" promptText="Nhập thể loại..." style="-fx-font-size: 14px; -fx-padding: 10px;" />

                <Button text="Tìm kiếm" style="-fx-background-color: #009688; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px;" onAction="#handleSearch"/>
            </children>
        </HBox>

        <TableView fx:id="bookTable" layoutX="20.0" layoutY="130.0" prefWidth="1000.0" prefHeight="550.0" style="-fx-background-color: white; -fx-border-color: #004D40;">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0" />
                <TableColumn fx:id="nameColumn" text="Tên sách" prefWidth="250.0" />
                <TableColumn fx:id="authorColumn" text="Tên tác giả" prefWidth="250.0" />
                <TableColumn fx:id="genreColumn" text="Thể loại" prefWidth="150.0" />
                <TableColumn fx:id="descriptionColumn" text="Mô tả" prefWidth="300.0" />

                <!-- Cột hành động để chứa các nút Sửa và Xóa -->
                <TableColumn fx:id="actionColumn" text="Hành động" prefWidth="150.0" />
            </columns>
        </TableView>

        <Button fx:id="addButton" layoutX="800.0" layoutY="700.0" text="Thêm sách mới"
                style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px;"
                onAction="#handleAddBook" />
    </children>
</AnchorPane>
