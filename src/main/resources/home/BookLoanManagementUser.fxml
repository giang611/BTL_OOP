<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="800.0" prefWidth="1150.0" style="-fx-background-color: #00796b;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="org.thuvien.controller.BorrowManagementUserController">
    <children>
        <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #ffffff;" text="Sách đã mượn" />

        <HBox layoutX="20.0" layoutY="70.0" spacing="15.0">
            <children>
                <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff;" text="Tìm kiếm:" />
                <TextField fx:id="searchField" prefHeight="40.0" prefWidth="249.0" promptText="Nhập tên sách" style="-fx-font-size: 14px; -fx-padding: 10px;" />
            </children>
        </HBox>

        <TableView fx:id="bookTable" layoutX="20.0" layoutY="130.0" prefHeight="550.0" prefWidth="1050.0" style="-fx-background-color: white; -fx-border-color: #004D40;">
            <columns>
                <TableColumn fx:id="serialColumn" prefWidth="100.0" text="Số Seri" />
                <TableColumn fx:id="nameColumn" prefWidth="225.0" text="Tên sách mượn" />
                <TableColumn fx:id="librarianColumn" prefWidth="175.0" text="Người ghi nhận" />
                <TableColumn fx:id="borrowDateColumn" prefWidth="175.0" text="Ngày mượn" />
                <TableColumn fx:id="returnDateColumn" prefWidth="175.0" text="Hạn trả" />
                <TableColumn fx:id="quantityColumn" prefWidth="100.0" text="Số lượng" />
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Trạng thái" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
