<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" style="-fx-background-color: #004d40;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.thuvien.controller.BorrowRecordController">
    <children>
        <Label layoutX="40.0" layoutY="40.0" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #ffffff;" text="Ghi nhận mượn sách" />

        <BorderPane layoutX="75.0" layoutY="120.0" prefHeight="550.0" prefWidth="850.0" style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #004d40; -fx-border-width: 3;">
            <left>
                <GridPane alignment="CENTER" hgap="20" vgap="20">
                    <padding>
                        <Insets bottom="20" left="20" right="10" top="20" />
                    </padding>
                    <columnConstraints>
                        <ColumnConstraints percentWidth="45" />
                        <ColumnConstraints percentWidth="55" />
                    </columnConstraints>
                    <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #004d40;" text="Thông tin sách" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

                        <Label style="-fx-font-size: 16px;" text="Mã Serial" GridPane.rowIndex="1" />
                        <TextField fx:id="serialTextField" onAction="#loadBookInfo" style="-fx-font-size: 16px; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #004d40; -fx-padding: 5;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label style="-fx-font-size: 16px;" text="Tên sách" GridPane.rowIndex="2" />
                        <Label fx:id="bookNameLabel" style="-fx-font-size: 16px;" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label style="-fx-font-size: 16px;" text="Tác giả" GridPane.rowIndex="3" />
                        <Label fx:id="authorLabel" style="-fx-font-size: 16px;" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label style="-fx-font-size: 16px;" text="Trạng thái sách" GridPane.rowIndex="4" />
                        <Label fx:id="statusLabel" style="-fx-font-size: 16px;" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label style="-fx-font-size: 16px;" text="Số lượng" GridPane.rowIndex="5" />
                        <Label fx:id="quantityLabel" style="-fx-font-size: 16px;" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                        <Button onAction="#saveBorrowRecord" prefHeight="60.0" prefWidth="169.0" style="-fx-background-color: #004d40; -fx-text-fill: #ffffff; -fx-font-size: 16px; -fx-background-radius: 5;" text="Ghi nhận" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                    </children>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>
            </left>

            <right>
                <GridPane alignment="CENTER" hgap="20" vgap="20">
                    <padding>
                        <Insets bottom="20" left="10" right="20" top="20" />
                    </padding>
                    <columnConstraints>
                        <ColumnConstraints percentWidth="45" />
                        <ColumnConstraints percentWidth="55" />
                    </columnConstraints>
                    <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #004d40;" text="Thông tin người mượn" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

                        <Label style="-fx-font-size: 16px;" text="MSSV" GridPane.rowIndex="1" />
                        <TextField fx:id="borrowerMssvTextField" style="-fx-font-size: 16px; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #004d40; -fx-padding: 5;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label style="-fx-font-size: 16px;" text="Họ tên" GridPane.rowIndex="2" />
                        <TextField fx:id="borrowerNameTextField" style="-fx-font-size: 16px; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #004d40; -fx-padding: 5;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label style="-fx-font-size: 16px;" text="Số điện thoại" GridPane.rowIndex="3" />
                        <TextField fx:id="borrowerPhoneTextField" style="-fx-font-size: 16px; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #004d40; -fx-padding: 5;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label style="-fx-font-size: 16px;" text="Ngày mượn" GridPane.rowIndex="4" />
                        <DatePicker fx:id="borrowDatePicker" style="-fx-font-size: 16px; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #004d40;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label style="-fx-font-size: 16px;" text="Ngày trả" GridPane.rowIndex="5" />
                        <DatePicker fx:id="returnDatePicker" style="-fx-font-size: 16px; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #004d40;" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                        <Label style="-fx-font-size: 16px;" text="Số lượng mượn" GridPane.rowIndex="6" />
                        <TextField fx:id="borrowQuantityTextField" style="-fx-font-size: 16px; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #004d40; -fx-padding: 5;" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                    </children>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>
            </right>
        </BorderPane>
        <Button layoutX="40.0" layoutY="7.0" onAction="#Back" style="-fx-font-size: 20; -fx-background-color: transparent; -fx-text-fill: #009688; -fx-cursor: hand; -fx-border-color: #003; -fx-border-radius: 5; -fx-padding: 5 15;" text="◀" />

    </children>
</AnchorPane>
