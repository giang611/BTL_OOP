<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="20" stylesheets="@../css/addbook.css" fx:controller="org.thuvien.controller.AddBookController" prefWidth="800.0" prefHeight="600.0">
    <Label text="Thêm sách mới" styleClass="label-title" />

    <GridPane hgap="20" vgap="20" prefWidth="750.0" prefHeight="400.0">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Tiêu đề sách:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="label-form" />
        <TextField fx:id="titleField" promptText="Nhập tiêu đề sách" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="text-field" prefWidth="400.0" />

        <Label text="Tác giả:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="label-form" />
        <TextField fx:id="authorField" promptText="Nhập tên tác giả" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="text-field" prefWidth="400.0" />

        <Label text="Thể loại:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="label-form" />
        <TextField fx:id="categoryField" promptText="Nhập tên thể loại" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="text-field" prefWidth="400.0" />

        <Label text="Nhà xuất bản:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="label-form" />
        <TextField fx:id="publisherField" promptText="Nhập tên nhà xuất bản" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="text-field" prefWidth="400.0" />

        <Label text="Ngày xuất bản:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="label-form" />
        <DatePicker fx:id="publishedDatePicker" promptText="Chọn ngày xuất bản" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="date-picker" prefWidth="400.0" />

        <Label text="Số lượng:" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="label-form" />
        <TextField fx:id="quantityField" promptText="Nhập số lượng" GridPane.rowIndex="5" GridPane.columnIndex="1" styleClass="text-field" prefWidth="400.0" />

        <Label text="Mô tả:" GridPane.rowIndex="6" GridPane.columnIndex="0" styleClass="label-form" />
        <TextArea fx:id="descriptionArea" promptText="Nhập mô tả chi tiết về sách" GridPane.rowIndex="6" GridPane.columnIndex="1" styleClass="text-area" prefWidth="400.0" prefHeight="200.0" wrapText="true" />

        <Label text="Ảnh bìa:" GridPane.rowIndex="7" GridPane.columnIndex="0" styleClass="label-form" />
        <Button text="Thêm ảnh" fx:id="uploadButton" GridPane.rowIndex="7" GridPane.columnIndex="1" styleClass="button-upload" />
        <ImageView fx:id="imageView" GridPane.rowIndex="8" GridPane.columnIndex="1" fitWidth="200.0" fitHeight="200.0" preserveRatio="true" />

    </GridPane>

    <HBox alignment="CENTER" spacing="20">
        <Button text="Thêm" fx:id="addButton" styleClass="button-add" />
        <Button text="Hủy" fx:id="cancelButton" styleClass="button-cancel" />
    </HBox>
</VBox>
