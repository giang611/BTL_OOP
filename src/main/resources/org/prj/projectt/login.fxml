<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.prj.projectt.Login.LoginController" maxWidth="400" maxHeight="300" stylesheets="@Styles.css">

    <center>
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Đăng nhập" styleClass="title"/>
            <TextField fx:id="usernameField" promptText="Tên đăng nhập"/>
            <PasswordField fx:id="passwordField" promptText="Mật khẩu"/>
            <Button text="Đăng nhập" onAction="#handleLogin" styleClass="login-button"/>
            <HBox alignment="CENTER" spacing="5">
                <Label text="Chưa có tài khoản?"/>
                <Button text="Đăng ký" onAction="#handleRegister" styleClass="register-button1"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
