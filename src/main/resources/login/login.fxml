<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.thuvien.controller.LoginController"
            prefWidth="800" prefHeight="500"
            stylesheets="@../css/Styles.css">

    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <Label text="Đăng nhập" styleClass="title"
                   style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

            <TextField fx:id="phoneField" promptText="Số điện thoại"
                       style="-fx-font-size: 20px; -fx-pref-width: 400px; -fx-pref-height: 40px;"/>
            <PasswordField fx:id="passwordField" promptText="Mật khẩu"
                           style="-fx-font-size: 20px; -fx-pref-width: 400px; -fx-pref-height: 40px;"/>

            <Button text="Đăng nhập" onAction="#handleLogin"
                    styleClass="login-button"
                    style="-fx-font-size: 22px; -fx-pref-width: 200px; -fx-pref-height: 50px;"/>

            <HBox alignment="CENTER" spacing="10">
                <Label text="Chưa có tài khoản?" style="-fx-font-size: 18px;"/>
                <Button text="Đăng ký" onAction="#handleRegister"
                        styleClass="register-button1"
                        style="-fx-font-size: 20px; -fx-pref-width: 140px; -fx-pref-height: 40px;"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
