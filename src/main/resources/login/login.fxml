<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.thuvien.controller.LoginController" prefWidth="600" prefHeight="375" stylesheets="@../css/Styles.css">

    <center>
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Đăng nhập" styleClass="title"/>
            <TextField fx:id="phoneField" promptText="Số điện thoại"
                       style="-fx-font-size: 16px; -fx-pref-width: 300px;"/>
            <PasswordField fx:id="passwordField" promptText="Mật khẩu"
                           style="-fx-font-size: 16px; -fx-pref-width: 300px;"/>

            <Button text="Đăng nhập" onAction="#handleLogin" styleClass="login-button"
                    style="-fx-font-size: 18px; -fx-pref-width: 150px;"/>
            <HBox alignment="CENTER" spacing="5">
                <Label text="Chưa có tài khoản?"/>
                <Button text="Đăng ký" onAction="#handleRegister" styleClass="register-button1"
                        style="-fx-font-size: 16px; -fx-pref-width: 100px;"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
